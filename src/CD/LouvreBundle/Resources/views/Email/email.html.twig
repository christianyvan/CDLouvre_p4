<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        <title>Musée Louvre</title>
    </head>
    <body>
        <div class="container">
            <h4>Détails billets :</h4>
            <table style="border-collapse: collapse">
                <thead>
                <tr >
                    <th style="border:1px solid black">Billet</th>
                    <th style="border:1px solid black">Nom</th>
                    <th style="border:1px solid black">Prenom</th>
                    <th style="border:1px solid black">Date de Naissance</th>
                    <th style="border:1px solid black">Pays</th>
                    <th style="border:1px solid black">Tarif Réduit</th>
                    <th style="border:1px solid black">Prix billet</th>
                </tr>
                </thead>
                <tbody>
                {% for ticketDescription in ticketsDescription %}
                        <tr>
                        <td style="border:1px solid black">Visiteur n° {{ loop.index }}</td>
                        <td style="border:1px solid black">{{  ticketDescription.visitorLastName }}</td>
                        <td style="border:1px solid black">{{  ticketDescription.visitorFirstName}}</td>
                        <td style="border:1px solid black">{{  ticketDescription.visitorBirthDate | date('d/m/Y') }}</td>
                        <td style="border:1px solid black">{{  ticketDescription.visitorCountry }}</td>

                        <td style="border:1px solid black">
                            {% if ticketDescription.reducedPrice == 1 %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td >
                        <td style="border:1px solid black">{{ ticketDescription.ticketPrice }}€</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <br>


        <div>
            <h4><strong>Montant total de votre commande : {{ purchaseOrder.getAmountOrder }}€</strong></h4>
        </div>
        <br>

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
